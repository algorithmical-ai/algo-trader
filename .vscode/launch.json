{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Algo Trader",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/src/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "/opt/anaconda3/envs/algo-trader/bin/python",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Algo Trader (Current File)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "/opt/anaconda3/envs/algo-trader/bin/python",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}

